<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Viền trắng ngoài -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="4dp"
                android:color="@android:color/white" />
        </shape>
    </item>

    <!-- Nút đỏ bên trong -->
    <item
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp">
        <shape android:shape="oval">
            <solid android:color="#FF3B30" />
        </shape>
    </item>

</layer-list>
